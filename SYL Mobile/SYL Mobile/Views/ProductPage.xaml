<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SYL_Mobile.Views.ProductPage"
             xmlns:local="clr-namespace:SYL_Mobile.ViewModels"
             xmlns:model="clr-namespace:SYL_Mobile.Models"
             xmlns:rating="clr-namespace:Syncfusion.SfRating.XForms;assembly=Syncfusion.SfRating.XForms">
    <ContentPage.Content>
        <StackLayout>

            <Image x:Name="image" 
                   Aspect="AspectFill"
                   />

            <StackLayout Orientation="Horizontal">
                <Label Text="Distance: "
                    VerticalOptions="CenterAndExpand" />

                <Label Text="{Binding Distance}"/>

                <Label x:Name="priceLabel" 
                    Text="{Binding Price}"
                    FontAttributes="Bold"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="End"/>
                
                
            </StackLayout>

            <BoxView 
                   HeightRequest="1"
                   Color="LightGray"/>
            
            
            <StackLayout Orientation="Horizontal">

                <Label Text="{Binding sellerName}"
                       FontAttributes="Bold"/>







                
                    <rating:SfRating x:Name="rating" Value="{Binding Avg}" Precision="Exact" ReadOnly="True" ItemSize="16" />
                
                <Label x:Name="reitings" Text="{Binding Avg}"/>





            </StackLayout>
            

            <Button x:Name="orderButton"
                BackgroundColor="Green"
                Text="Reserve for pick-up"
                Command="{Binding PlaceOrderCommand}"/>
            <Button x:Name="reviewButton"
                BackgroundColor="Green"
                Text="Rate this seller"
                Command="{Binding PlaceReviewCommand}"/>
            <Button x:Name="checkReviewButton"
                BackgroundColor="Green"
                Text="Check rating"
                Command="{Binding CheckReviewCommand}"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>